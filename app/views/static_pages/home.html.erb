<div class="center jumbotron">
  <h1>Welcome to My Posts</h1>

  <h2>
    Better place to share your GRE analytical writings.
  </h2>
	<% if signed_in? %>
		<%= link_to "Post your writings!", new_post_path, class: "btn btn-primary" %>
	<% else %>
  	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  <% end %>
</div>
<div class="row">
	<div class="col-md-6">
	<ul class="posts">
		<%= render @posts %>
	</ul>
	<%= will_paginate @posts %>
	</div>
</div>
